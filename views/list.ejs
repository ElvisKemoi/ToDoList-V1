<%- include("header" )-%>
<div class="box" id="heading">
	<h1><%= listTitle %></h1>
</div>
<div class="box">
	<div>
		<% newListItems.forEach(item=>{ %>
		<form action="/delete" method="post">
			<div class="item">
				<input
					type="checkbox"
					name="checkbox"
					value="<%= item._id%>"
					onchange="this.form.submit()"
				/>
				<p><%= item.name%></p>
			</div>
			<input type="hidden" value="<%= listTitle %>" name="listName" />
		</form>
		<% }) %>

		<form action="/" method="post" class="item">
			<input
				type="text"
				name="newItem"
				id="nextItem"
				placeholder="New Item"
				autofocus="true"
				autocomplete="off"
			/>
			<button type="submit" name="list" value="<%= listTitle %>">+</button>
		</form>
	</div>
</div>

<%- include("footer") %>
